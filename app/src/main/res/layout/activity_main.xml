<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/calc_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="?attr/colorPrimary"
                android:elevation="6dp"
                android:minHeight="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_arrow_back"
                />

        </android.support.design.widget.AppBarLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/valor_layout"
                android:text="R$"
                android:textSize="18sp"
                android:layout_marginTop="24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/valor_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="36dp"
                android:paddingStart="36dp"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/valor_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Valor R$"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/frete_layout"
                android:layout_alignStart="@id/frete_layout"
                android:text="R$"
                android:textSize="18sp"
                android:layout_marginTop="24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/frete_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="36dp"
                android:paddingStart="36dp">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/frete_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Frete"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/icms_layout"
                android:layout_alignStart="@id/icms_layout"
                android:text="R$"
                android:textSize="18sp"
                android:layout_marginTop="24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/icms_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="36dp"
                android:paddingStart="36dp">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/icms_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="ICMS destacado"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/ipi_layout"
                android:layout_alignStart="@id/ipi_layout"
                android:text="R$"
                android:textSize="18sp"
                android:layout_marginTop="24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ipi_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="36dp"
                android:paddingStart="36dp">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ipi_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="IPI"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/valor_agregado_layout"
                android:layout_alignStart="@id/valor_agregado_layout"
                android:text="%"
                android:textSize="18sp"
                android:layout_marginTop="24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/valor_agregado_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="36dp"
                android:paddingStart="36dp">


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/valor_agregado_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Margem de valor agregado"
                    android:inputType="numberDecimal"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:clickable="true"
                app:fabSize="normal"
                android:src="@drawable/ic_arrow_forward"
                android:layout_below="@+id/valor_agregado_layout"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>



    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>


